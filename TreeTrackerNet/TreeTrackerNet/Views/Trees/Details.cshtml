@model TreeTrackerNet.Models.Tree

@{
    ViewBag.Title = "Details";
}

<div>
    <center><h2>@Html.DisplayFor(model => model.Name)</h2></center>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Species)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Species)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateBought)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateBought)
        </dd>
    </dl>
    <hr />
    <h4>Observations</h4>
    <p>
    @Html.ActionLink("Create New Obsevation", "Create", new { treeId = ViewBag.TreeId }, new { })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => Model.observations.First().DateObserver)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.observations.First().Watered)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.observations.First().Fertalized)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.observations.First().TrunkMeasurement)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model.observations) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateObserver)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Watered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fertalized)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrunkMeasurement)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
</table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to My Trees", "Index")
</p>
